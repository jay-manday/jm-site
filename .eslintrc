{
  "parser": "babel-eslint",
  "plugins": [
    "react"
  ],
  "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "env": {
        "es6":     true,
        "browser": true,
        "node":    true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
  "rules": {
    "max-len": [1, 120, 2, {"ignoreComments": true}],
    "react/prop-types": [0],
    "no-console": 0
  }
}